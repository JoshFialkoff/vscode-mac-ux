[
  // === MACOS STANDARD SHORTCUTS ===
  // File operations using Cmd (not Ctrl)
  {
    "key": "cmd+n",
    "command": "workbench.action.files.newUntitledFile"
  },
  {
    "key": "cmd+shift+n",
    "command": "workbench.action.newWindow"
  },
  {
    "key": "cmd+o",
    "command": "workbench.action.files.openFile"
  },
  {
    "key": "cmd+shift+o",
    "command": "workbench.action.files.openFolder"
  },
  {
    "key": "cmd+s",
    "command": "workbench.action.files.save"
  },
  {
    "key": "cmd+shift+s",
    "command": "workbench.action.files.saveAs"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "cmd+shift+w",
    "command": "workbench.action.closeWindow"
  },
  
  // === MACOS NAVIGATION ===
  // Command+Left/Right for word navigation (macOS standard)
  {
    "key": "cmd+left",
    "command": "cursorHome",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+right",
    "command": "cursorEnd",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+up",
    "command": "cursorTop",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+down",
    "command": "cursorBottom",
    "when": "textInputFocus"
  },
  
  // Option+Left/Right for word-by-word navigation
  {
    "key": "alt+left",
    "command": "cursorWordLeft",
    "when": "textInputFocus"
  },
  {
    "key": "alt+right",
    "command": "cursorWordRight",
    "when": "textInputFocus"
  },
  
  // === MACOS SELECTION ===
  // Shift combinations for selection (macOS standard)
  {
    "key": "cmd+shift+left",
    "command": "cursorHomeSelect",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+shift+right",
    "command": "cursorEndSelect",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+shift+up",
    "command": "cursorTopSelect",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+shift+down",
    "command": "cursorBottomSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+left",
    "command": "cursorWordLeftSelect",
    "when": "textInputFocus"
  },
  {
    "key": "alt+shift+right",
    "command": "cursorWordRightSelect",
    "when": "textInputFocus"
  },
  
  // === MACOS EDITING ===
  // Command+A for select all
  {
    "key": "cmd+a",
    "command": "editor.action.selectAll"
  },
  
  // Command+C/V/X for copy/paste/cut
  {
    "key": "cmd+c",
    "command": "editor.action.clipboardCopyAction"
  },
  {
    "key": "cmd+v",
    "command": "editor.action.clipboardPasteAction"
  },
  {
    "key": "cmd+x",
    "command": "editor.action.clipboardCutAction"
  },
  
  // Command+Z/Shift+Z for undo/redo
  {
    "key": "cmd+z",
    "command": "undo"
  },
  {
    "key": "cmd+shift+z",
    "command": "redo"
  },
  
  // === MACOS SEARCH ===
  // Command+F for find (macOS standard)
  {
    "key": "cmd+f",
    "command": "actions.find"
  },
  {
    "key": "cmd+g",
    "command": "editor.action.nextMatchFindAction"
  },
  {
    "key": "cmd+shift+g",
    "command": "editor.action.previousMatchFindAction"
  },
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.findInFiles"
  },
  
  // === MACOS WINDOW MANAGEMENT ===
  // Command+` to cycle between windows (macOS standard)
  {
    "key": "cmd+`",
    "command": "workbench.action.quickSwitchWindow"
  },
  
  // Command+M to minimize (macOS standard)
  {
    "key": "cmd+m",
    "command": "workbench.action.minimizeOtherEditors"
  },
  
  // === DEVELOPER SHORTCUTS ===
  // Command+Shift+P for command palette (matches Spotlight behavior)
  {
    "key": "cmd+shift+p",
    "command": "workbench.action.showCommands"
  },
  
  // Command+P for quick open (similar to Spotlight)
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen"
  },
  
  // Command+T for new tab (macOS browser convention)
  {
    "key": "cmd+t",
    "command": "workbench.action.files.newUntitledFile"
  },
  
  // Command+R for refresh/reload (browser convention)
  {
    "key": "cmd+r",
    "command": "workbench.action.reloadWindow"
  },
  
  // Command+Plus/Minus for zoom (macOS standard)
  {
    "key": "cmd+=",
    "command": "workbench.action.zoomIn"
  },
  {
    "key": "cmd+-",
    "command": "workbench.action.zoomOut"
  },
  {
    "key": "cmd+0",
    "command": "workbench.action.zoomReset"
  },
  
  // === PANELS AND SIDEBAR ===
  // Command+B to toggle sidebar (common in macOS apps)
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  
  // Command+J to toggle panel
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  },
  
  // Command+Shift+E for explorer (file browser)
  {
    "key": "cmd+shift+e",
    "command": "workbench.view.explorer"
  },
  
  // === TERMINAL ===
  // Control+` for terminal (doesn't conflict with Cmd+` for window switching)
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  
  // Command+Shift+C for new terminal (like iTerm)
  {
    "key": "cmd+shift+c",
    "command": "workbench.action.terminal.new"
  },
  
  // === CODE NAVIGATION ===
  // Command+Click for go to definition (IDE standard)
  {
    "key": "cmd+click",
    "command": "editor.action.revealDefinition",
    "when": "editorTextFocus"
  },
  
  // Command+Shift+O for symbols (similar to Xcode)
  {
    "key": "cmd+shift+o",
    "command": "workbench.action.gotoSymbol"
  },
  
  // === COMMENTING ===
  // Command+/ for toggle line comment (common across editors)
  {
    "key": "cmd+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus"
  },
  
  // Command+Shift+/ for toggle block comment
  {
    "key": "cmd+shift+/",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus"
  }
]